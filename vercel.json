{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/dashboard", "dest": "/index.html" },
    { "src": "/leads", "dest": "/index.html" },
    { "src": "/inventory", "dest": "/index.html" },
    { "src": "/meetings", "dest": "/index.html" },
    { "src": "/contracts", "dest": "/index.html" },
    { "src": "/reports", "dest": "/index.html" },
    { "src": "/settings", "dest": "/index.html" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 